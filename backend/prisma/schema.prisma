generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id           String        @id @default(cuid())
  name         String
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  connections  Connection[]
  devices      Device[]
  installZones InstallZone[]
  trades       Trade[]
  zones        Zone[]

  @@map("projects")
}

model Zone {
  id        String  @id @default(cuid())
  projectId String
  code      String
  name      String
  order     Int
  rooms     Room[]
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, code])
  @@map("zones")
}

model Room {
  id      String       @id @default(cuid())
  zoneId  String
  code    String
  number  Int
  name    String
  order   Int
  devices RoomDevice[]
  zone    Zone         @relation(fields: [zoneId], references: [id], onDelete: Cascade)

  @@unique([zoneId, code])
  @@map("rooms")
}

model Device {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  description String?
  code        String?
  tradeId     String?
  categoryId  String?
  category    Category?    @relation(fields: [categoryId], references: [id])
  trade       Trade?       @relation(fields: [tradeId], references: [id])
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  roomDevices RoomDevice[]

  @@map("devices")
}

model RoomDevice {
  id            String       @id @default(cuid())
  roomId        String
  deviceId      String?
  designation   String
  code          String?
  totalCode     String?
  tradeId       String?
  categoryId    String?
  connectionId  String?
  installZoneId String?
  cableType     String?
  target        String?
  quantity      Int          @default(1)
  order         Int
  installZone   InstallZone? @relation(fields: [installZoneId], references: [id])
  connection    Connection?  @relation(fields: [connectionId], references: [id])
  category      Category?    @relation(fields: [categoryId], references: [id])
  trade         Trade?       @relation(fields: [tradeId], references: [id])
  device        Device?      @relation(fields: [deviceId], references: [id])
  room          Room         @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("room_devices")
}

model Trade {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  code        String?
  hgNumber    Int?
  order       Int
  categories  Category[]
  devices     Device[]
  roomDevices RoomDevice[]
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, code])
  @@map("trades")
}

model Category {
  id          String       @id @default(cuid())
  tradeId     String
  name        String
  code        String?
  order       Int
  trade       Trade        @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  devices     Device[]
  roomDevices RoomDevice[]

  @@unique([tradeId, code])
  @@map("categories")
}

model Connection {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  code        String?
  voltage     String?
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  roomDevices RoomDevice[]

  @@unique([projectId, code])
  @@map("connections")
}

model InstallZone {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  code        String?
  order       Int
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  roomDevices RoomDevice[]

  @@unique([projectId, code])
  @@map("install_zones")
}
